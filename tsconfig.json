{
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Node 15",

    "compilerOptions": {
      "lib": ["es2020", "DOM"],
      "module": "commonjs",
      "target": "es2020",

      "jsx": "react",
      "baseUrl": "./",

      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true
    }  
  }